<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.dummylogin.LoginActivity"
    android:background="@drawable/nyc_cropped">

   <RelativeLayout
        android:background="@color/colorOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Facebook"
            android:textAllCaps="false"
            android:id="@+id/button"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:background="@color/colorButton"
            android:drawableLeft="@drawable/facebook2_resize"
            android:layout_margin="5dp"
            android:drawablePadding="-50dp"
            android:textSize="18dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Google"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/google_50"
            android:drawablePadding="-50dp"
            android:background="@color/colorButton"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Email"
            android:textAllCaps="false"
            android:background="@color/colorEmailBackground"
            android:textColor="@color/colorEmailText"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="We promise we won't post anything to your wall unless you ask us to."
            android:textColor="@color/colorEmailText"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/imageView"
            android:src="@drawable/airbnb_resize"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
   </RelativeLayout>

</RelativeLayout>
